.md-markdown
  p,
  ul,
  ol,
  table,
  blockquote,
  code
    max-width 1000px

  blockquote
    position relative
    margin 0
    padding 12px 12px 12px 48px
    background-color rgba(c-light, 0.55)

    &:before
      content 'â€œ'
      font-family Georgia, serif
      color c-pink
      position absolute
      top 20px
      left 8px
      font-size 65px
      font-weight 700
      line-height 40px
      margin-right 10px

    h1,
    h2,
    h3,
    h4,
    h5,
    h6
      margin-top 0

    .md-code-block
      margin 0 -12px 0 -48px

      &:last-child
        margin-bottom -12px

  img
    &:first-child
      margin-top 0

    &:last-child
      margin-bottom 0

  p
    &:first-child
      margin-top 0

    &:last-child
      margin-bottom 0

  li
    margin-top 10px

    &:first-child
      margin-top 0

    > ul,
    > ol
      margin-top 10px

  a
    color c-pink

  thead
    background-color lighten(c-green, 70%)

  tbody
    background-color lighten(c-green, 95%)

    tr:nth-child(even)
      background-color lighten(c-green, 90%)

  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    margin-left -40px
    margin-right -40px
    padding 10px 40px

.md-markdown-inline
  display inline

  p
    display inline

.md-code-block
  padding 10px 40px
  margin 0 -40px

.md-code-block .md-code
  display block

