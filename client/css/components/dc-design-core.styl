.dc-title
  background-color lighten(c-pink, 20%)
  border-bottom 4px solid c-pink
  padding 20px
  margin 0
  font-size 2.6em
  text-align center
  color c-white
  transition color 0.1s ease-in-out

  /.ly-custom-headings &
    font-size 3em

@media only screen and (min-width: 768px)
  .dc-title
    background linear-gradient(to bottom right, lighten(c-pink, 20%) 0, lighten(c-pink, 20%) 30%, c-pink 80%, darken(c-pink, 20%) 100%)
    padding 20px 40px 30px
    font-size 3em
    text-align inherit

    /.ly-custom-headings &
      font-size 4em
