table
  width 100%

th,
td
  padding 10px

@media only screen and (max-width: 950px)
  table
    display block
  thead
    display none
  tbody
    display block
  tr
    display block
    margin-bottom 10px
  tr:last-child
    margin-bottom 0
  td
    display block
  td:before
    display block
    content attr(data-label)
    color c-green
    font-variant small-caps
    font-size 12px
    margin 0 0 5px
