.as-chart svg
  overflow visible

.as-axis path,
.as-axis line
  fill none
  shape-rendering crispEdges

.as-axis,
.as-legend
  fill c-black

.as-x path
  display none

.as-legend
  text-transform capitalize

.as-tip
  line-height 1
  font-weight bold
  background-color #fff
  margin-left 15px

.as-tip-content
  padding 8px
  border 1px dotted

.as-tip-content:after
  content ' '
  position absolute
  width 0
  height 0
  left -8px
  border-top 8px solid transparent
  border-bottom 8px solid transparent
  border-right 8px solid
  margin 3px 0 0 0
  font-size 18px
  line-height 0

.as-tip-label
  text-transform capitalize
