.ca-container
  padding 0
  margin 0
  text-align left

  &:empty
    display none

.ca-help-me
  font-style italic
  font-size 14px

.ca-help-me,
#carbonads
  position relative
  padding 10px
  margin-bottom 25px

.carbon-img
  vertical-align top
  display inline-block
  text-align center
  margin-right 15px

.carbon-text
  vertical-align top
  display inline-block
  width 135px
  font-size 14px
  color #333
  margin-bottom 20px

.carbon-poweredby
  position absolute
  text-transform lowercase
  font-variant small-caps
  font-style italic
  font-size 11px
  margin-top 10px
  right 10px
  bottom 10px
