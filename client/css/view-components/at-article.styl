.at-header
  position relative
  background-color lighten(c-pink, 20%)
  border-bottom 5px solid c-pink
  padding 20px
  margin 0

.at-title-link
  color c-white

.at-title
  padding 0
  margin 0
  font-size 2.6em
  text-align center

  /.ly-custom-headings &
    font-size 3em

.ly-teasers .at-teaser
  font-family f-subheading

.at-teaser
  margin-bottom 60px
  padding 20px
  background-color lighten(c-yellow, 30%)

.at-meta
  display none
  float right
  font-style italic
  color c-red-shadow

.at-corpus
  margin-bottom 25px

.at-body
  margin-top 25px

.at-full
  margin-top 25px
  text-align center

.at-full-button
  display inline-block
  padding 16px
  background-color c-pink
  box-shadow 1px 1px 1px c-border
  color #fff

  &:visited
    color #fff

  &:hover
    text-decoration none
    background-color c-yellow
    color c-pink

.at-siblings
  margin-top 20px
  text-align center

.at-prev,
.at-next
  display block
  margin-bottom 20px

  &:hover span
    text-decoration underline

.at-prev-anchor
  margin-right 4px

.at-next-anchor
  margin-left 4px

.at-prev-anchor,
.at-next-anchor
  display inline-block
  vertical-align middle
  user-select none
  white-space nowrap

.at-prev-text,
.at-next-text
  display inline-block
  vertical-align middle
  white-space nowrap
  overflow hidden
  max-width calc(100% - 20px)

.at-related
  padding 15px
  margin-top 20px
  background-color c-light-gray

.at-related-item
  margin-top 20px

  &:first-child
    margin-top 0

.at-related-header
  margin-top 0
  display none

.at-more
  text-align center

.at-more-button
  display block
  font-weight normal

.at-discuss
  margin 20px 0

@media screen and (min-width: 768px)
  .at-header
    padding 20px 40px 30px

  .at-title
    text-align inherit
    font-size 3em

    /.ly-custom-headings &
      font-size 4em

  .at-teaser
    padding 20px 40px

  .at-meta
    display inherit

  .at-prev
    float left
    text-align left
    margin-right 10px

  .at-next
    float right
    text-align right

  .at-prev,
  .at-next
    display inline-block
    margin-bottom 0
    width calc(50% - 5px)

  .at-next-text
    text-align right

  .at-related-header
    display block

  .at-more
    padding 10px 0

  .at-more-button
    display inline-block
