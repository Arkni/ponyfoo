.at-title-link
  position relative
  display block
  background-color lighten(c-pink, 20%)
  border-bottom 4px solid c-pink
  padding 20px
  color c-white
  transition color 0.1s ease-in-out

@media only screen and (min-width: 768px)
  .at-title-link
    background linear-gradient(to bottom right, lighten(c-pink, 20%) 0, lighten(c-pink, 20%) 30%, c-pink 80%, darken(c-pink, 20%) 100%)

.at-title
  padding 0
  margin 0
  font-size 2.6em
  text-align center

  /.ly-custom-headings &
    font-size 3em

.ly-teasers .at-teaser
  font-family f-subheading

.at-teaser
  position relative
  background-color lighten(c-yellow, 65%)

  &:after
    position absolute
    bottom 0
    left 0
    right 0
    height 4px
    content ''
    rainbow()

.at-teaser-markdown,
.at-introduction,
.at-body
  padding 20px 20px

.at-meta
  display none
  float right
  font-style italic

.at-full
  margin-top 25px
  text-align center

.at-full-button
  display inline-block
  padding 16px
  background-color c-pink
  box-shadow 1px 1px 1px c-border
  color #fff

  &:visited
    color #fff

  &:hover
    text-decoration none
    background-color c-yellow
    color c-pink

.at-related
  padding 15px
  margin-top 20px

.at-related-item
  margin-top 20px

  &:first-child
    margin-top 0

.at-related-header
  margin-top 0
  display none

.at-more
  text-align center

.at-more-button
  display block
  font-weight normal

.at-discuss
  margin 20px 0

@media screen and (min-width: 768px)
  .at-title-link
    padding 20px 40px 30px

  .at-title
    text-align inherit
    font-size 3em

    /.ly-custom-headings &
      font-size 4em

  .at-teaser-markdown,
  .at-introduction,
  .at-body
    padding 20px 40px

  .at-meta
    display inherit

  .at-related-header
    display block

  .at-more
    padding 10px 0

  .at-more-button
    display inline-block
