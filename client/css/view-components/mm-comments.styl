mm-author-padding = 10px

.mm-heading
  margin 0 0 40px 0
  padding 20px
  background linear-gradient(to left, c-white 0, c-yellow-highlight 33%, c-pink 100%)
  color c-white

.mm-gravatar
  transition all 0.5s ease-in-out
  border-top 2px solid rgba(c-yellow, 0.3)
  border-right 2px solid rgba(c-pink, 0.3)
  border-bottom 2px solid rgba(c-pink, 0.4)
  border-left 2px solid rgba(c-yellow, 0.7)
  border-radius 30px
  box-shadow 0px 0px 2px rgba(c-black, 0.2)
  width 24px
  height 24px

.mm-author
  padding mm-author-padding

.mm-author-site
  display inline-block
  margin mm-author-padding * -1
  padding mm-author-padding
  color c-pink

  &:hover .mm-gravatar
    border-top-color rgba(c-pink, 0.6)
    border-right-color rgba(c-yellow, 0.9)
    border-bottom-color rgba(c-yellow, 0.5)
    border-left-color rgba(c-pink, 0.5)

.mm-author-name
  margin-left 8px

.ly-teasers .mm-author-name
  font-family f-subheading

.mm-gravatar,
.mm-author-name
  display inline-block
  vertical-align middle

.mm-content
  position relative
  margin-top 2px
  margin-left 20px

  &:before
    float left
    content ''
    border-bottom 1px dotted lighten(c-green, 40%)
    width 10px
    height 30px
    margin-top -3px

  &:after
    position absolute
    content ''
    border-left 1px dotted lighten(c-green, 40%)
    width 1px
    top 0
    bottom -3px
    margin-top -3px

.mm-comment:last-child .mm-content
  &:before
    border-left 1px dotted lighten(c-green, 40%)
  &:after
    display none

.mm-content-html
  margin-left 10px
  padding 10px
  background linear-gradient(to right, c-light-orange 0%, lighten(c-orange, 60%) 100%)

  .md-code-block
    margin 0 -10px
    padding 0

    &:last-child
      margin-bottom -10px

.mm-thread-footer
  text-align right

.mm-thread-reply
  border-top 3px solid lighten(c-orange, 20%)

.mm-thread-footer .mc-composer
  border-top 3px solid lighten(c-orange, 20%)

.mm-thread,
.mm-footer
  max-width 1040px

.mm-footer-title
  margin 40px 10px
  text-align center

  &:only-child
    display none

.ly-teasers .mm-footer-title
  font-family f-subheading

@media screen and (min-width: 768px)
  .mm-thread-footer
    .mc-composer
      border-top none
    .mc-author input
      border-top 3px solid lighten(c-orange, 20%)

  .mm-footer-title
    margin 40px 20px

  .mm-heading
    padding 20px 40px
