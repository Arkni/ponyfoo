.ly-title
  margin-top 30px
  padding 0
  font-size 2.5em
  text-align center

.ly-teasers .ly-title
  font-family f-subheading

.ly-header
  margin 0

.ly-legend
  display none
  color c-blue-light
  font-weight normal
  font-style italic
  font-size 1em
  border-bottom 0

.ly-teasers .ly-legend
  font-family f-subheading

.ly-section
  margin-bottom 25px

@media screen and (min-width: 768px)
  .ly-title
    margin-bottom 0
    font-size 4.5em

  .ly-legend
    display block

  .ly-main,
  .ly-aside
    vertical-align top
    display inline-block

  .ly-main
    width 100%
    // padding-right 320px
    // margin-right -300px

  .ly-aside
    width 300px
