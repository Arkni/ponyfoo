.hy-container
  overflow hidden
  list-style none

.hy-article
  margin-top 30px
  line-height 30px

  &:first-child
    margin-top 0

.hy-publication,
.hy-total-duration
  font-weight bold

.hy-since
  font-style italic

.hy-date
  margin-right 6px

.hy-connector
  display none

.hy-link
  display inline-block

@media screen and (min-width: 768px)
  .hy-date
    display none

  .hy-article
    margin-top 0

  .hy-link
    margin-right -20px

  .hy-connector
    display inline
    white-space nowrap
    margin-left 20px
