input,
textarea
  display block
  padding 10px 8px
  border 1px solid c-grayish
  border-top 2px solid c-light
  border-left 2px solid c-light
  background-color c-white
  color c-strong

  &:not(.uv-button):focus
    outline none
    border 1px solid c-grayish
    border-top 2px solid c-border
    border-left 2px solid c-border

textarea
  min-height 300px
  max-height 700px
