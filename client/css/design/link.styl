a,
button
  outline none

a,
button,
input[type='submit']
  cursor pointer
  text-decoration none

// prime styles for :visited links
lk-link-visited-normal()
  &
    background-color rgba(#fff, 0.1)
  & .md-code-inline
    position relative
    &:only-child
      display inline-block
      line-height 17px
    &:before
      content ''
      position absolute
      background-color c-yellow
      top 0
      left 0
      right 0
      bottom 0
      opacity 0.1

lk-link-visited-already()
  &
    background-color rgba(c-pink, 0.1)
  & .md-code-inline:before
    background-color c-pink

lk-link-normal()
  color c-pink
  border-bottom 1px solid transparent
  lk-link-visited-normal()

lk-link-hover()
  border-bottom 1px solid c-pink

lk-link-focus()
  outline 1px dotted c-pink

lk-link-rare(child)
  {child}
    lk-link-normal()
  &:focus {child},
  &:active {child}
    lk-link-focus()
  &:visited {child}
    lk-link-visited-already()
  &:hover {child}
    lk-link-hover()

lk-link()
  lk-link-rare('')

.lk-link
  lk-link()

.lk-rainbows
  position relative
  color c-black-text
  margin-bottom 5px
  &:focus,
  &:active
    outline 1px dotted c-gray
  &:hover
    rainbow-pseudo()

.lk-icon
  color c-black-text
  &:focus,
  &:active
    outline 1px dotted c-dark-gray
  &:hover
    color c-pink

lk-visitor(selector)
  color c-black-text
  &{selector}
    font-awesome()
    content '\f00c'
    color c-gray
    border-bottom 1px dotted c-gray
  &:hover{selector}
    color c-black-text
    border-bottom-style solid
  &:visited{selector}
    color c-bright-turquoise

.lk-visitor
  lk-visitor(':after')
  &:after
    margin-left 5px

.lk-visitor-inside
  lk-visitor(' .lk-visitor-target:before')
  .lk-visitor-target:before
    margin-right 5px

.lk-visitor-before
  lk-visitor(':before')
  &:before
    margin-right 5px

.lk-visitor-before-no-underline
  &:before
    border-bottom-width 0

